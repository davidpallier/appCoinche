html
  head
    title AppCoinche - Login
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(href="#{url_for('static', filename='vendors/bootstrap-4.4.1/css/bootstrap.min.css')}" rel="stylesheet")
    link(href="#{url_for('static', filename='css/custom.css')}" rel="stylesheet")
  body
    .row.h-100
      .col-md-4.d-flex.align-items-center.title
        .card.card-body.text-justify.ml-5
          h1 Please login
          p Login here to access the server
      .col-md-8.d-flex.align-items-center
        .login-form.ml-5
          form(action="" method="post")
            .form-group
              label User Name
              input.form-control(type="text" placeholder="Username" name="username" value="#{request.form.username}")
            .form-group
              label Password
              input.form-control(type="password" placeholder="Password" name="password" value="#{request.form.password}")
            button.btn.btn-primary(type="submit") Login
            button.btn.btn-secondary(type="submit") Register
          if error
            .alert.alert-danger.w-100
              strong Error:
              span.m-1
               | #{error}
    script(type="text/javascript", src="#{url_for('static', filename='vendors/bootstrap-4.4.1/js/bootstrap.min.js')}")


